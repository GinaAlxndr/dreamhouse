<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables,
    UselessParent,HardcodedText">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:src="@drawable/img_bg" />

    <ImageView
        android:id="@+id/img_tampak_depan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/img_tampak_depan" />

    <TextView
        android:id="@+id/txt_tampak_depan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_tampak_depan"
        android:layout_marginLeft="20dp"
        android:text="Tampak Depan"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_ruang_tamu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/img_ruang_tamu" />

    <TextView
        android:id="@+id/txt_ruang_tamu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_ruang_tamu"
        android:layout_marginLeft="150dp"
        android:text="Ruang Tamu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_kamar_tidur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/img_kamar_tidur" />

    <TextView
        android:id="@+id/txt_kamar_tidur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_kamar_tidur"
        android:layout_marginLeft="280dp"
        android:text="Kamar Tidur"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_kamar_mandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/img_kamar_mandi" />

    <TextView
        android:id="@+id/txt_kamar_mandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_kamar_mandi"
        android:layout_marginLeft="20dp"
        android:text="Kamar Mandi"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_dapur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/img_dapur" />

    <TextView
        android:id="@+id/txt_dapur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_dapur"
        android:layout_marginLeft="175dp"
        android:text="Dapur"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_taman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/img_taman" />

    <TextView
        android:id="@+id/txt_taman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_taman"
        android:layout_marginLeft="305dp"
        android:text="Taman"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/img_person"
        android:id="@+id/img_person"/>

    <TextView
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:id="@+id/txt_wellcome"
        android:text="Wellcome!Now you're part of the house family"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/img_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_save" />

    <ImageView
        android:id="@+id/img_rectangle_hitam"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="633dp"
        android:src="@drawable/rectangle_hitam" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_exit"
        android:layout_marginTop="655dp"
        android:id="@+id/img_exit"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:src="@drawable/img_ellipse"
        android:id="@+id/img_ellipse"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="365dp"
        android:layout_marginTop="656dp"
        android:src="@drawable/img_feedback"
        android:id="@+id/img_feedback"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="615dp"
        android:id="@+id/img_camera" />



</RelativeLayout>
